@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

	<ul class="nav navbar-nav navbar-right">

		<li>@Html.ActionLink("Upload", "Index", "Upload")</li>
		<li role="presentation" class="dropdown">
			<a class="dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-expanded="false">
				@User.Identity.GetUserName() <span class="caret"></span>
			</a>
			<ul class="dropdown-menu" role="menu">
				<li>@Html.ActionLink("Public Profile", "Index", "Profile", new { userName = User.Identity.GetUserName() }, null)</li>
				<li>@Html.ActionLink("Manage Account", "Index", "Manage")</li>
				<li class="divider"></li>
				<li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
			</ul>
		</li>
		
	</ul>
	}
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
